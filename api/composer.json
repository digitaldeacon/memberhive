{
    "name": "digitaldeacon/memberhive",
    "description": "API for MemberHive",
    "keywords": ["yii2 api rest"],
    "homepage": "http://www.memberhive.com/",
    "type": "project",
    "license": "AGPL-3.0-or-later",
    "support": {
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.0.0",
        "ext-mbstring": "*",
        "ext-simplexml": "*",
        "yiisoft/yii2": "^2.0.15",
        "yiisoft/yii2-coding-standards": "~2.0.3",
        "analyticsface/yii2-mailgun" : "~1.1",
        "elvanto/api-php": "~1.0.6",
        "aracoool/yii2-uuid": "~1.1",
        "firebase/php-jwt": "~5.0.0"
    },
    "require-dev": {
        "yiisoft/yii2-debug": "*",
        "yiisoft/yii2-gii": "*",
        "squizlabs/php_codesniffer": "2.9.x-dev",
        "yiisoft/yii2-apidoc": "~2.1.0",
        "pahanini/yii2-rest-doc": "*"
    },
    "config": {
        "process-timeout": 1800,
        "fxp-asset": {
            "enabled": false
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "scripts": {
        "post-create-project-cmd": [
            "yii\\composer\\Installer::postCreateProject"
        ]
    },
    "extra": {
        "yii\\composer\\Installer::postCreateProject": {
            "setPermission": [
                {
                    "runtime": "0777",
                    "web/assets": "0777",
                    "yii": "0755"
                }
            ],
            "generateCookieValidationKey": [
                "config/web.php"
            ]
        }
    },
    "autoload": {
        "files": [
            "globals.php",
            "clients.php"
        ]
    }
}
